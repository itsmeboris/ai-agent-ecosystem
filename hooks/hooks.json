{
  "version": 1,
  "hooks": {
    "afterAgentResponse": [
      {
        "command": "./hooks/workspace/enforce-progress-update.sh"
      }
    ],
    "beforeShellExecution": [
      {
        "command": "./hooks/execution/command-executor.sh"
      }
    ],
    "stop": [
      {
        "command": "./hooks/automation/auto-continue.sh"
      }
    ]
  }
}

